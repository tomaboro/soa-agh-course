<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">admin</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/soa</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
        <property name="show_sql">true</property>
        <property name="connection.pool_size">1</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <mapping class="com.motek.soa.entity.Czytelnik"/>
        <mapping class="com.motek.soa.entity.Ksiazka"/>
        <mapping class="com.motek.soa.entity.Autor"/>
        <mapping class="com.motek.soa.entity.Wypozyczenia"/>
    </session-factory>
</hibernate-configuration>